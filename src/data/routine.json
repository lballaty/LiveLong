    },
    {
      "id": "single_leg",
      "name": "Single‑Leg Standing — Ippon Ashi",
      "type": "time",
      "duration_sec": 120,
      "cues": [
        "Stand near support",
        "Lift foot, hold 10s",
        "2 holds/side"
      ]
    },
    {
      "id": "daily_stretching",
      "name": "Daily Stretching — Rajio Taiso",
      "type": "time",
      "duration_sec": 180,
      "cues": [
