      "type": "time",
      "duration_sec": 90,
      "cues": [
        "Hold towel shoulder‑width",
        "Twist right ↔ left with relaxed shoulders",
        "10–15 each side"
      ],
      "media": {
        "images": [
          "src/assets/images/placeholder.svg"
        ]
      }
    },
    {
